<h3>Internal Hosts</h3>
{% if morla_wireguard_domains is defined %}
<ul>
{% for item in morla_wireguard_domains %}
	<li><a href="http://{{ morla_internal_ip }}:{{ item.port }}"> {{ item.name }} </a></li>
{% endfor %}
</ul>
{% endif %}

<hr>

<h3>VPN Hosts resolved by IP/PORT</h3>
{% if morla_wireguard_domains is defined %}
<ul>
{% for item in morla_wireguard_domains %}
	<li><a href="http://{{ item.ip or ""}}:{{ item.port or "" }}"> {{ item.name }} </a></li>
{% endfor %}
</ul>
{% endif %}

<hr>

<h3>VPN Hosts resolved by DNS</h3>
{% if morla_wireguard_domains is defined %}
<ul>
{% for item in morla_wireguard_domains %}
	<li><a href="http://{{ item.name }}.wg.morla"> {{ item.name }}.wg.morla </a></li>
{% endfor %}
</ul>
{% endif %}
